<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Device Inventory Tree View -->
    <record id="view_ts_device_inventory_tree" model="ir.ui.view">
        <field name="name">ts.device.inventory.tree</field>
        <field name="model">ts.device.inventory</field>
        <field name="arch" type="xml">
            <tree string="Device Inventory">
                <field name="device_id"/>
                <field name="branch_id"/>
                <field name="counted_qty"/>
                <field name="system_qty"/>
                <field name="date"/>
                <field name="user_id"/>
            </tree>
        </field>
    </record>

    <!-- Device Inventory Form View -->
    <record id="view_ts_device_inventory_form" model="ir.ui.view">
        <field name="name">ts.device.inventory.form</field>
        <field name="model">ts.device.inventory</field>
        <field name="arch" type="xml">
            <form string="Device Inventory">
                <sheet>
                    <group>
                        <field name="device_id"/>
                        <field name="branch_id"/>
                        <field name="counted_qty"/>
                        <field name="note"/>
                    </group>
                    <footer>
                        <button string="Validate Inventory" type="object" name="action_validate_inventory" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Device Inventory Search View -->
    <record id="view_ts_device_inventory_search" model="ir.ui.view">
        <field name="name">ts.device.inventory.search</field>
        <field name="model">ts.device.inventory</field>
        <field name="arch" type="xml">
            <search string="Search Device Inventory">
                <field name="device_id"/>
                <field name="branch_id"/>
                <field name="user_id"/>
                <field name="date"/>
            </search>
        </field>
    </record>
</odoo>
