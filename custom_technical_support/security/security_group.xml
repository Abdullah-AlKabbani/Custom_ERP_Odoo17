<odoo>
    <!-- Module category -->
    <record id="module_category_technical_support" model="ir.module.category">
        <field name="name">Technical Support</field>
        <field name="description">Manage Technical Support Department</field>
        <field name="sequence" eval="40"/>
    </record>

    <!-- Groups -->
    <record id="group_ts_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_technical_support"/>
    </record>

    <record id="group_ts_team_leader" model="res.groups">
        <field name="name">Team Leader</field>
        <field name="category_id" ref="module_category_technical_support"/>
        <field name="implied_ids" eval="[(4, ref('group_ts_user'))]"/>
    </record>

    <record id="group_ts_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_technical_support"/>
        <field name="implied_ids" eval="[(4, ref('group_ts_team_leader'))]"/>
    </record>

    <record id="group_ts_super_admin" model="res.groups">
        <field name="name">Super Admin</field>
        <field name="category_id" ref="module_category_technical_support"/>
        <field name="implied_ids" eval="[(4, ref('base.group_system'))]"/>
    </record>
</odoo>
