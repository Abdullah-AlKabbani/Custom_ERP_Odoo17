<odoo>

    <!-- TREE VIEW -->
    <record id="view_branch_report_location_tree" model="ir.ui.view">
        <field name="name">branch.report.location.tree</field>
        <field name="model">custom_supply.branch.report.location</field>
        <field name="arch" type="xml">
            <tree string="Branches by Location">
                <field name="country_id"/>
                <field name="city_id"/>
                <field name="branch_count"/>
            </tree>
        </field>
    </record>

    <!-- BAR CHART -->
    <record id="view_branch_report_location_graph_bar" model="ir.ui.view">
        <field name="name">branch.report.location.graph.bar</field>
        <field name="model">custom_supply.branch.report.location</field>
        <field name="arch" type="xml">
            <graph string="Branches by City" type="bar">
                <field name="city_id" type="row"/>
                <field name="branch_count" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- PIE CHART -->
    <record id="view_branch_report_location_graph_pie" model="ir.ui.view">
        <field name="name">branch.report.location.graph.pie</field>
        <field name="model">custom_supply.branch.report.location</field>
        <field name="arch" type="xml">
            <graph string="Branches Distribution by Country" type="pie">
                <field name="country_id" type="row"/>
                <field name="branch_count" type="measure"/>
            </graph>
        </field>
    </record>

</odoo>
