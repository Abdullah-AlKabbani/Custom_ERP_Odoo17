<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_branch_type_tree" model="ir.ui.view">
        <field name="name">branch.type.tree</field>
        <field name="model">custom_supply.branch.type</field>
        <field name="arch" type="xml">
            <tree string="Branch Types">
                <field name="name"/>
                <field name="code"/>
                <field name="is_operational"/>
                <field name="has_sales"/>
                <field name="has_stock"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_branch_type_form" model="ir.ui.view">
        <field name="name">branch.type.form</field>
        <field name="model">custom_supply.branch.type</field>
        <field name="arch" type="xml">
            <form string="Branch Type">
                <sheet>
                    <group>
                        <group string="Basic Information">
                            <field name="name"/>
                            <field name="code"/>
                            <field name="active"/>
                        </group>

                        <group string="Capabilities">
                            <field name="is_operational"/>
                            <field name="has_sales"/>
                            <field name="has_stock"/>
                        </group>
                    </group>

                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
