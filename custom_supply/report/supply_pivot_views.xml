<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Pivot View -->
    <record id="view_supply_request_line_pivot" model="ir.ui.view">
        <field name="name">custom_supply_request_line.pivot</field>
        <field name="model">custom_supply.supply_request_line</field>
        <field name="arch" type="xml">
            <pivot string="Supply Summary">
                <field name="branch_id" type="row"/>
                <field name="product_id" type="col"/>
                <field name="supply_qty" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Drill Down Tree View (editable) -->
    <record id="view_supply_request_line_tree_edit" model="ir.ui.view">
        <field name="name">custom_supply_request_line.tree.edit</field>
        <field name="model">custom_supply.supply_request_line</field>
        <field name="arch" type="xml">
            <tree string="Request Lines" editable="bottom">
                <field name="branch_id" readonly="1"/>
                <field name="product_id" readonly="1"/>
                <field name="category_id" readonly="1"/>
                <field name="request_id" readonly="1"/>
                <field name="request_date" readonly="1"/>
                <field name="supply_qty"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_supply_request_line_search" model="ir.ui.view">
        <field name="name">custom_supply.supply_request_line.search</field>
        <field name="model">custom_supply.supply_request_line</field>
        <field name="arch" type="xml">
            <search>
                <!-- Group By Filters -->
                <filter name="branch_filter" string="Branches" domain="[]" context="{'group_by':'branch_id'}"/>
                <filter string="Products" name="prod" domain="[]" context="{'group_by':'product_id'}"/>

                <!-- Fields -->
                <field name="branch_id"/>
                <field name="product_id"/>
                <field name="request_date"/>
                <field name="request_name" string="Request Number"/>

                <!-- Predefined Date Filters -->
                <filter name="today" string="Today"
                        domain="[('request_date','>=', context_today())]"/>

                <group expand="0" string="Date Filter">
                    <filter string="Last 7 Days" name="last_7_days" domain="[('request_date','>=', (context_today()-7))]"/>
                    <filter string="Last 30 Days" name="last_30_days" domain="[('request_date','>=', (context_today()-30))]"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action to open pivot -->
    <record id="action_supply_pivot" model="ir.actions.act_window">
        <field name="name">Supply Summary</field>
        <field name="res_model">custom_supply.supply_request_line</field>
        <field name="view_mode">pivot,tree,form</field>
        <field name="view_id" ref="view_supply_request_line_pivot"/>
        <field name="domain">[('request_id.status','=','Supply')]</field>
        <field name="context">{'search_default_filter_supply': 1}</field>
    </record>
</odoo>
