<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ==========================
         Kanban View (Received Requests)
         ========================== -->
    <record id="view_custom_supply_received_kanban" model="ir.ui.view">
        <field name="name">custom_supply.received_request.kanban</field>
        <field name="model">custom_supply.supply_request</field>
        <field name="priority" eval="15"/>
        <field name="groups_id" eval="[(4, ref('custom_supply.group_branch_employee'))]"/>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column" create="true" quick_create="false" edit="false">
                <field name="status"/>
                <field name="branch_id"/>
                <field name="request_date"/>
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click o_kanban_card o_status_#{record.status.raw_value}">
                            <strong><field name="name"/></strong>
                            <div><field name="branch_id"/></div>
                            <div><field name="request_date"/></div>
                            <div>Status: <field name="status"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ==========================
         Form View (Received Requests)
         ========================== -->
    <record id="view_custom_supply_received_form" model="ir.ui.view">
        <field name="name">custom_supply.received_request.form</field>
        <field name="model">custom_supply.supply_request</field>
        <field name="priority" eval="15"/>
        <field name="arch" type="xml">
            <form string="Received Supply Request" class="o_form_statusbar">
                <header>
                    <field name="status" widget="statusbar"
                           statusbar_visible="InBranch,Supply,InWarehouse,OnRoad,Done"
                           statusbar_colors="{'InBranch':'warning','Supply':'success','InWarehouse':'info','OnRoad':'primary','Done':'secondary'}"/>
                    <button name="action_order_received" type="object"
                            string="Order Received"
                            class="btn-success"
                            icon="fa-check"
                            groups="custom_supply.group_branch_employee"/>
                </header>

                <sheet>
                    <group>
                        <group string="Request Info">
                            <field name="name" readonly="1"/>
                            <field name="branch_id" readonly="1"/>
                            <field name="supply_manager_id" readonly="1"/>
                            <field name="warehouse_user_id" readonly="1"/>
                        </group>

                        <group string="Processing Details">
                            <field name="request_date" readonly="1"/>
                            <field name="supply_confirm_date" readonly="1"/>
                            <field name="warehouse_export_date" readonly="1"/>
                            <field name="received_date" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Received View" groups="custom_supply.group_branch_employee">
                            <field name="line_ids" context="{'default_request_id': active_id}">
                                <tree editable="bottom" create="0">
                                    <field name="product_id" readonly="1"/>
                                    <field name="unit_name" readonly="1"/>
                                    <field name="export_qty" readonly="1"/>
                                    <field name="received_qty"/>
                                    <field name="received_note"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ==========================
         Action (Received Requests)
         ========================== -->
    <record id="action_custom_supply_received_requests" model="ir.actions.act_window">
        <field name="name">Received Requests</field>
        <field name="res_model">custom_supply.supply_request</field>
        <field name="view_mode">kanban,form</field>
        <field name="view_id" eval="False"/>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_custom_supply_received_kanban')}),
            (0, 0, {'view_mode': 'form',   'view_id': ref('view_custom_supply_received_form')})
        ]"/>
        <field name="domain">[('status','=','OnRoad')]</field>
        <field name="context">{'tab':'received_request', 'create': False}</field>
        <field name="groups_id" eval="[(4, ref('custom_supply.group_branch_employee'))]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                There are no supply requests to process.
            </p>
        </field>
    </record>
</odoo>
