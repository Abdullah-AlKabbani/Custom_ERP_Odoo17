<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_weekly_branch_notification" model="ir.cron">
            <field name="name">Daily Branch Notification</field>
            <field name="model_id" ref="model_custom_supply_branch_notification"/>
            <field name="state">code</field>
            <field name="code">model.send_weekly_notifications()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <!-- تشغيل أول مرة غداً الساعة 07:00 صباحاً -->
            <field name="nextcall"
                   eval="(DateTime.now() + relativedelta(days=1)).replace(hour=7, minute=0, second=0).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>
    </data>
</odoo>
