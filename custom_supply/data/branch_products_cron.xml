<odoo>
    <data noupdate="1">
        <!-- CRON للساعة 00:00 صباحاً -->
        <record id="ir_cron_branch_product_sync_midnight" model="ir.cron">
            <field name="name">Branch Product Sync Midnight</field>
            <field name="model_id" ref="model_custom_supply_branch"/>
            <field name="state">code</field>
            <field name="code">model.sync_branch_products()</field>
            <field name="active">True</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall">2025-12-17 00:00:00</field>
            <field name="numbercall">-1</field>
        </record>
    </data>
</odoo>
